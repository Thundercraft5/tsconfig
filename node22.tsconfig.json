{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 22",
	"extends": "./esm-node.tsconfig.json",
	"compilerOptions": {
		"lib": [
			"ES2021",
			"ES2022",
			"ES2023",
			"ES2024",
			"ESNext"
		],
		"module": "NodeNext",
		"moduleResolution": "node",
		"target": "esnext",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"useDefineForClassFields": true,
	}
}