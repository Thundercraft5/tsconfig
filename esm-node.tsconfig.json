{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "ESM",
	"extends": "./esm.tsconfig.json",
	"compilerOptions": {
		"module": "NodeNext",
		"esModuleInterop": true,
		"moduleResolution": "node"
	},
	"ts-node": {
		"esm": true,
		"experimentalReplAwait": true,
		"experimentalSpecifierResolution": "node",
		"pretty": true,
		"compilerOptions": {
			"isolatedModules": false
		}
	}
}